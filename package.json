{
  "name": "dytext",
  "version": "0.5.0",
  "type": "module",
  "description": "Simple, powerful dynamic text management for modern web applications",
  "main": "dist/dytext.cjs",
  "module": "dist/dytext.esm.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dytext.esm.js",
      "require": "./dist/dytext.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "publish": "npm publish",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "content-management",
    "static-sites",
    "next-cms",
    "react-cms",
    "api-client"
  ],
  "author": "Prafful Suthar",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.3",
    "microbundle": "^0.15.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "dlv": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalix-lab/dytext"
  },
  "bugs": {
    "url": "https://github.com/scalix-lab/dytext/issues"
  },
  "homepage": "https://github.com/scalix-lab/dytext#readme"
}
